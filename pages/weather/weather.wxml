<!-- 实时天气模块 -->
<view class="realtime-weather">
  <!-- 当前温度 -->
  <view class="current-temp">
    {{weatherInfo.temperature}}
    <text class="degree-symbol">°</text>
  </view>
  <!-- 当前定位信息 -->
  <view class="location-info">{{address}}</view>
  <!-- 当前天气状况 -->
  <view class="weather-info">{{weatherInfo.weather}}  湿度 {{weatherInfo.humidity}}</view>

</view>
