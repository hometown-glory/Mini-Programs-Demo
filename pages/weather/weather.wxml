<!-- 3天预报模块 -->
<view class="centered-text">
  3天预报模块
</view>
<view class="forecast-module">
  <block wx:for="{{weather3dInfo}}" wx:key="date">
    <view class="forecast-item">
      <text class="day">{{item.dayOfWeek}}</text>
      <text class="weather">{{item.weather}}</text>
      <text class="temperature">{{item.temperature}}</text>
    </view>
  </block>
